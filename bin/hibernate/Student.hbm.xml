<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class catalog="school_management" name="Models.Student" table="student_account">
        
      <id name = "id" type = "integer">
      	 <column name = "id" />
         <generator class="assigned"/>
      </id>
      
      <property name = "name" type = "string">
      	<column name = "name" length = "50" />
      </property>
      
      <property name = "grade" type = "float">
      	<column name = "grade"/>
      </property>
      
      <property name = "avatar" type = "string">
      	<column name = "avatar" length = "1000" />
      </property>
      
      <property name = "address" type = "string">
      	<column name = "address" length = "200" />
      </property>
      
      <property name = "notes" type = "string">
      	<column name = "notes" length = "500" />
      </property>
      
      <many-to-one class="Models.Class" name="class" fetch="join" lazy="false" cascade="save-update">
		<column length="50" name="class_id" not-null="true"/> 
	  </many-to-one>
      
      
   </class>
</hibernate-mapping>